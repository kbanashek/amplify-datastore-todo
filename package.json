{
  "name": "task-system-poc",
  "main": "./entry.js",
  "version": "0.1.22",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "reset-and-reseed": "node ./scripts/reset-and-reseed.js",
    "android": "./scripts/apply-native-fixes.sh && expo run:android",
    "ios": "./scripts/apply-native-fixes.sh && expo run:ios",
    "ios:install-pods": "cd ios && pod install && cd ..",
    "web": "expo start --web",
    "lint": "expo lint",
    "test": "NODE_OPTIONS=--max-old-space-size=6144 jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eas-build-pre-install": "yarn config set registry https://registry.npmjs.org/ && yarn config set always-auth false && printf \"registry=https://registry.npmjs.org/\\nalways-auth=false\\n\" > .npmrc",
    "e2e:build:android": "eas build --profile development --platform android",
    "e2e:build:ios": "eas build --profile development --platform ios",
    "e2e:maestro": "maestro test e2e/maestro",
    "e2e:maestro:android": "maestro test e2e/maestro/android",
    "e2e:maestro:ios": "maestro test e2e/maestro/ios",
    "e2e:playwright": "playwright test",
    "e2e:playwright:ui": "playwright test --ui",
    "e2e:playwright:debug": "playwright test --debug",
    "e2e:playwright:keep-data": "E2E_CLEANUP=false playwright test",
    "e2e:web": "yarn e2e:playwright",
    "e2e:web:keep-data": "yarn e2e:playwright:keep-data",
    "e2e": "yarn e2e:maestro",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check:circular": "madge --circular --extensions ts,tsx,js,jsx src app",
    "prepare": "husky install || true",
    "build:task-system": "yarn --cwd packages/task-system build",
    "apply-native-fixes": "./scripts/apply-native-fixes.sh",
    "generate:task-system-fixture": "tsx scripts/generate-task-system-fixture.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@aws-amplify/core": "^6.13.1",
    "@aws-amplify/datastore": "^5.0.88",
    "@aws-amplify/datastore-storage-adapter": "^2.1.88",
    "@aws-amplify/react-native": "^1.1.10",
    "@aws-amplify/ui-react-native": "^2.5.3",
    "@aws-sdk/client-translate": "^3.700.0",
    "@expo/vector-icons": "^14.1.0",
    "@orion/task-system": "file:packages/task-system",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/datetimepicker": "^8.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-community/slider": "^4.5.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "amazon-cognito-identity-js": "^6.3.15",
    "aws-amplify": "^6.15.5",
    "expo": "~53.0.20",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "^17.0.10",
    "expo-linking": "~7.1.7",
    "expo-random": "~14.0.0",
    "expo-router": "~5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-sqlite": "^15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-logs": "^5.5.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.0.10",
    "dotenv": "^17.2.3",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.0",
    "madge": "^7.0.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "react-test-renderer": "19.0.0",
    "tsx": "^4.21.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
