{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@task-types/*": ["src/types/*"],
      "@constants/*": ["src/constants/*"],
      "@contexts/*": ["src/contexts/*"],
      "@translations/*": ["src/translations/*"],
      "@models/*": ["src/models/*"],
      "@screens/*": ["src/screens/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@runtime/*": ["src/runtime/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "composite": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "target": "es2019",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.json"],
  "exclude": [
    "dist/**",
    "node_modules/**",

    // Never ship test code/types in the package build output.
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.test.ts",
    "**/*.test.tsx",

    "../../src/amplify-config.*",
    "../../src/amplify-init.*",
    "../../src/amplify-init-sync.*",
    "../../src/amplifyconfiguration.json",
    "../../src/aws-exports.*",
    "../../src/API.ts",
    "../../src/graphql/**",

    // Exclude app-only screens/views that aren't part of the embeddable module build.
    // These currently have type issues / missing hook modules and are not required by TaskActivityModule.
    "../../src/components/TaskList.tsx",
    "../../src/components/TasksView.tsx",

    // Exclude list screens/hooks not used by the module embed path.
    "../../src/hooks/useActivityList.ts",
    "../../src/hooks/useQuestionList.ts",
    "../../src/hooks/useTaskAnswerList.ts",
    "../../src/hooks/useTaskHistoryList.ts",
    "../../src/hooks/useTaskResultList.ts"
  ]
}
