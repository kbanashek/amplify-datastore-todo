  echo "âŒ Lint failed with errors. Please fix linting errors before pushing."
  echo "ğŸ’¡ Note: Warnings are allowed, but errors must be fixed."
  exit 1
}

echo "âœ… Lint passed!"

echo "ğŸ’… Running format check..."
npm run format:check || {
  echo "âŒ Format check failed. Please run 'npm run format' to fix formatting."
  exit 1
}

echo "âœ… Format check passed!"

echo "ğŸ”„ Checking for circular dependencies..."
npm run check:circular || {
  echo "âŒ Circular dependencies detected. Please fix them before pushing."
  echo "ğŸ’¡ Run 'npm run check:circular' to see the circular dependency graph."
  exit 1
}

echo "âœ… No circular dependencies found!"
echo "âœ… All pre-push checks passed!"

